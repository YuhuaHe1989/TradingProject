extends ./layout

block css
  body
    nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#nav-collapse', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/')= title
        #nav-collapse.collapse.navbar-collapse
          .col-lg-11
            ul.nav.navbar-nav.navbar-right
              li
                a(href='/login')#profileLink Profile
              li
                a(href='/register')#registerLink Register
              li
                a(href='/login')#loginLink Login
              li
                a(href="/")#logout Logout
    .container.registerInput
      div
        .form-group.registerUsername.registerInput
          label(for='username') Username
          input#username.form-control(type='text', placeholder='Username')
        .form-group.registerPassword.registerInput
          label(for='pw1') Password
          input#pw1.form-control(type='password', placeholder='Password')
        .form-group.registerPassword.registerInput
          label(for='pw2') Password
          input#pw2.form-control(type='password', placeholder='Confirm Password')
        button.btn.btn-default#register Register

block js
  script(src='js/register.js')
