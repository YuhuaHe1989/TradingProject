extends ./layout

block css
  
  body
    nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#nav-collapse', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/')= title
        #nav-collapse.collapse.navbar-collapse
          .col-lg-11
            ul.nav.navbar-nav.navbar-right
              li
                a(href='/login')#profileLink Profile
              li
                a(href='/register')#registerLink Register
              li
                a(href='/login')#loginLink Login
    .container.loginInput
      div
        .form-group#loginUsername.loginInput
          label(for='username') Username
          input#username.form-control(type='text', placeholder='Username')
        .form-group#loginPassword.loginInput
          label(for='pw') Password
          input#pw.form-control(type='password', placeholder='Password')
        button.btn.btn-default#login Login

block js
  script(src='js/login.js')
